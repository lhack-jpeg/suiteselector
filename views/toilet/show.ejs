<% layout('layouts/boilerplate') %>
<h1>Toilets that can suit</h1>
<div class="container">
    <% if (toilets.length > 0) { %> <% for( let toilet of toilets) { %>
    <div class="card">
        <article class="card-content">
            <h3><%= toilet.name%></h3>
            <img src="<%= toilet.image %> " alt="" />
            <a href="/show/<%=toilet.code%>>">See Details</a>
        </article>
    </div>
    <% } %> <% } else { %>
    <div></div>
    <div class="no-result">
        <a href="/"><h1>Please Search again</h1></a>
    </div>
    <div></div>
    <% } %>
</div>
